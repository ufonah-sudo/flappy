{
  "version": 2,
  "rewrites": [
    { "source": "/api/auth", "destination": "/api/auth.js" },
    { "source": "/api/coins", "destination": "/api/coins.js" },
    { "source": "/api/scores", "destination": "/api/scores.js" },
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}